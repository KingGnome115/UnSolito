<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Imagenes">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="214dp"
                android:layout_height="186dp"
                android:layout_gravity="top|left"
                android:visibility="visible"
                app:srcCompat="@drawable/bladerunner" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="217dp"
                android:layout_height="183dp"
                android:layout_gravity="top|left"
                android:visibility="visible"
                app:srcCompat="@drawable/ciudad" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="219dp"
                android:layout_height="199dp"
                android:layout_gravity="top|left"
                android:visibility="visible"
                app:srcCompat="@drawable/espada" />

            <ImageView
                android:layout_width="222dp"
                android:layout_height="189dp"
                android:layout_gravity="top|left"
                android:visibility="visible"
                app:srcCompat="@drawable/guardian" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="229dp"
                android:layout_height="205dp"
                android:layout_gravity="top|left"
                android:visibility="visible"
                app:srcCompat="@drawable/horizonte" />

            <ImageView
                android:layout_width="227dp"
                android:layout_height="183dp"
                android:layout_gravity="top|left"
                android:visibility="visible"
                app:srcCompat="@drawable/hoyonegro" />

            <ImageView
                android:layout_width="227dp"
                android:layout_height="212dp"
                android:layout_gravity="top|left"
                android:visibility="visible"
                app:srcCompat="@drawable/skullnight" />

            <ImageView
                android:layout_width="227dp"
                android:layout_height="154dp"
                android:layout_gravity="top|left"
                android:visibility="visible"
                app:srcCompat="@drawable/universo" />

            <ImageView
                android:layout_width="226dp"
                android:layout_height="199dp"
                android:layout_gravity="top|left"
                android:visibility="visible"
                app:srcCompat="@drawable/universodos" />

            <ImageView
                android:layout_width="224dp"
                android:layout_height="148dp"
                android:layout_gravity="top|left"
                android:visibility="visible"
                app:srcCompat="@drawable/zelda" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>